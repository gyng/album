{
  "name": "album",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "index:update": "(cd ../index; bash ./do-full-index.sh)",
    "deploy:vercel": "npx vercel build --prod && npx vercel deploy --prebuilt --prod",
    "dev": "next dev --turbopack",
    "build": "next build && echo 'build done'",
    "start": "next start",
    "lint": "next lint && prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest --watch",
    "test:ci": "timeout 60s jest --forceExit --runInBand && npm run lint",
    "test:e2e": "echo \"CI env: $CI\" && npm run build && playwright test",
    "test:e2e:built": "playwright test",
    "test:e2e:headed": "echo \"CI env: $CI\" && npm run build && playwright test --headed"
  },
  "dependencies": {
    "@sqlite.org/sqlite-wasm": "^3.50.4-build1",
    "@tanstack/react-query": "^5.85.5",
    "@vercel/analytics": "^1.5.0",
    "coi-serviceworker": "^0.1.7",
    "exifr": "^7.1.3",
    "fraction.js": "^5.3.4",
    "image-size": "^2.0.2",
    "maplibre-gl": "^5.6.2",
    "next": "^15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-map-gl": "^8.0.4",
    "sharp": "^0.34.3",
    "sqlite3": "^5.1.7",
    "use-debounce": "^10.0.5",
    "usehooks-ts": "^3.1.1",
    "uuid": "^11.1.0"
  },
  "overrides": {
    "usehooks-ts": {
      "react": "^19.1.1"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "@types/uuid": "10.0.0",
    "eslint": "9.34.0",
    "eslint-config-next": "^15.5.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": "^22.0.0"
  }
}
